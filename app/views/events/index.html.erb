<div class="row">
<% @events.each do |event| %>
  <div class="col-12 col-lg-3">
      <div class="card text-center text-white">
        <div class="card photo card-img-top">
          <%= cl_image_tag drink.photo.key, height: 350, width: 350, crop: :fit if event.photo.attached? %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to event.name, event_path(event) %></h5>
            <p class="card-text">Price: Â£<%= drink.price %>.99</p>
            <button type="button" class="buttons"><%= link_to "View Event Details", new_event_path(event) %></button>
          </div>
        </div>
      </div>
  </div>
<% end %>
</div>
