<div class="background" style="background-position: center center; background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1525373612132-b3e820b87cea?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1480&q=80)">
  <div class="d-flex justify-content-center" id="event-show">
    <div class="col-12 col-lg-6">
      <div class="card text-center align-items-center" style="background-color: #fcfdffd6">
        <div class="col-md-9">
          <div class="tab-content">
            <div class="tab-pane card-body active" id="event-details" role="tabpanel">
              <div class="card">
                <h5 class="card-title">Event: <%= @event.title.upcase %></h5>
                <p class="card-text">Category: <%= @event.category.upcase %></p>
                <p class="card-text">Organiser: <%= @event.user.first_name.upcase %></p>
                <p class="card-text">Date: <%= @event.event_date.strftime('%A, %d-%m-%Y').upcase %></p>
              </div>
            <br>
            <div class="card-text">
                <%= simple_form_for [@event, Invitation.new] do |f| %>
                <div class="d-flex justify-content-around">
                  <%= f.input :user, as: :select, label: "Invite people", collection: @users, style:"width: 70%;" %>
                    <div class="d-flex align-self-center" class="rounded-circle" id="invite">
                      <%= button_tag type: :submit do %>
                        <i class="fa-solid fa-envelope-circle-check"></i>
                      </div>
                    <% end %>
                    </div>
                  <% end %>
              </div>
              <div class="d-flex justify-content-around my-1">
                <button class="button" type="button"><%= link_to "Chat", chatroom_path(@chatroom) %> </button>
                <button class="button" type="button"><%= link_to "See this Wishlist", wishlist_path(@wishlist) %></button>
              </div>
            <% if @event.invitations.empty?%>
              <h2> Add some guests </h2>
              <% else %>
            <div class="card-1 card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1512418490979-92798cec1380?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80)">
              <table class="table table-hover" id="table">
                <br>
                  <thead>
                    <tr>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Nickname</th>
                    </tr>
                  </thead>
                  <tbody>
                <% @invitees.each do |invitee| %>
                <tr class="card-body">
                    <td> <%= invitee.user.first_name %></td>
                    <td> <%= invitee.user.last_name %></td>
                    <td> <%= invitee.user.nickname %></td>
                      </td>
                  </tr>
                <% end %>
                </table>
              </div>
                <% end %>
              </div>
              </div>
          </div>
        </div>
      </div>
      </div>
    </div>
</div>
