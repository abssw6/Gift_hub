<div class="d-flex justify-content-center my-5">
  <div class="col-12 col-lg-6">
    <div class="card text-center">
      <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
          <li class="nav-item">
            <a class="nav-link active" aria-current="true" href="#">Event Details</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Wish List</a>
          </li>
        </ul>
      </div>
      <div class="card-body">
        <h5 class="card-title">Title: <%= @event.title %></h5>
        <p class="card-text">Category: <%= @event.category %></p>
        <p class="card-text">Organiser: <%= @event.user.first_name %></p>
        <p class="card-text">Date: <%= @event.eventdate %></p>
        <button type="button"><%= link_to "Back to Events", "/events" %>
        <button type="button"><%= link_to "Delete Event", event_path(@event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      </div>
    </div>
    </div>
  </div>
